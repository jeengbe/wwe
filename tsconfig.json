{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "pretty": true,
    "types": [
      "react",
      "react-dom"
    ],
    "baseUrl": "./",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
